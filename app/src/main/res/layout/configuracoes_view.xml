<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/txtNomeLojaMenu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:text="Configurações"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#179294" />
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >
        
        <Switch
            android:id="@+id/swAlertaOfertas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="30dp"
            android:checked="true"
            android:text="Alerta de Ofertas"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/txtMeuCadastro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="30dp"
            android:text="Meu Cadastro"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/txtSobre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="30dp"
            android:text="Sobre o Aplicativo"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="20sp" />
        
    </LinearLayout>

</LinearLayout>
