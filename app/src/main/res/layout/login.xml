<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scrollViewPrincipal"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="fill"
    android:background="@drawable/bg_lowresolution"
    android:fillViewport="true"
    tools:context="br.com.hector.ofertaki.CadastroLojistaActivity" >

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="10dp"
    android:paddingRight="10dp" >

    <ImageView
        android:id="@+id/imgLojaLogadaMenu"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/logo_branco" />

    <EditText
        android:id="@+id/edtUsuario"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/barra_edicao"
        android:drawableRight="@drawable/icone_usuario"
        android:ems="10"
        android:hint="Usuário"
        android:maxLines="1"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:textColor="#e9e8fb" >

        <requestFocus />
    </EditText>

    <EditText
        android:id="@+id/edtSenhaLogin"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginBottom="15dp"
        android:background="@drawable/barra_edicao"
        android:drawableRight="@drawable/icone_cadeado"
        android:ems="10"
        android:hint="Senha"
        android:maxLines="1"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:password="true"
        android:textColor="#e9e8fb" />

    <Button
        android:id="@+id/btnEntrar"
        android:layout_width="189dp"
        android:layout_height="34dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/botao_laranja"
        android:textColor="#e9e8fb"
        android:text="Entrar" />

    <TextView
        android:id="@+id/txtNovoCadastro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:text="Não sou Cadastrado"
        android:textColor="#e9e8fb"
        android:textAppearance="?android:attr/textAppearanceMedium" />
    
    <TextView
        android:id="@+id/txtEsqueciMinhaSenha"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="5dp"
        android:text="Esqueci Minha Senha"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#e9e8fb" />

</LinearLayout></ScrollView>
