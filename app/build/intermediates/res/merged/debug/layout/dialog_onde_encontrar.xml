<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TextView
        android:id="@+id/txtNomeLojaOndeEncontrar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="24dp"
        android:text="Nome Loja"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/txtCategoriaLojaOndeEncontrar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/txtNomeLojaOndeEncontrar"
        android:layout_below="@+id/txtNomeLojaOndeEncontrar"
        android:text="Small Text"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <TextView
        android:id="@+id/txtEnderecoLojaOndeEncontrar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/txtCategoriaLojaOndeEncontrar"
        android:layout_below="@+id/txtCategoriaLojaOndeEncontrar"
        android:layout_marginTop="17dp"
        android:text="Small Text"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <TextView
        android:id="@+id/txtContatoOndeEncontrar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/txtEnderecoLojaOndeEncontrar"
        android:layout_below="@+id/txtEnderecoLojaOndeEncontrar"
        android:layout_marginTop="30dp"
        android:text="Contato: "
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <TextView
        android:id="@+id/txtOkOndeEncontrar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/txtTelefoneLojaOndeEncontrar"
        android:layout_marginBottom="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginTop="25dp"
        android:text="Ok"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <ProgressBar
        android:id="@+id/pBarOndeEncontrar"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtNomeLojaOndeEncontrar"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/txtTelefoneLojaOndeEncontrar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/txtContatoOndeEncontrar"
        android:layout_below="@+id/txtContatoOndeEncontrar"
        android:layout_marginLeft="5dp"
        android:text="Small Text"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="#000000" />

</RelativeLayout>
